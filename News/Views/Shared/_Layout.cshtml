@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Начальная загрузка"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a class="nav-link px-2 text-secondary" asp-controller="Home" asp-action="Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["MainPage"]</font></font></a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="Subtitles" asp-action="ResultSubtitles"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["ListNews"]</font></font></a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="nav-link px-2 text-white" asp-controller="PrintNews" asp-action="Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["ActionNews"]</font></font></a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="nav-link px-2 text-white" asp-controller="PrintSubtitles" asp-action="Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["ActionSubtitle"]</font></font></a></li>
                    }
                    <li class="nav-link px-2 text-white"><partial name="_Culture" /></li>
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="@localizer["Scan"]" aria-label="Поиск">
                </form>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="text-end">
                        <a type="button" class="btn btn-warning" asp-controller="Account" asp-action="Login"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["Enter"]</font></font></a>
                    </div>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="text-end">
                        <a type="button" class="btn btn-warning" asp-controller="Account" asp-action="Logout"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@localizer["Output"]</font></font></a>
                    </div>
                }

            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <label style="font-size:12px">@localizer["Admin"]</label>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
