@using News.Data.Models
@model Subtitles

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewBag.Title = localizer["EditSubtitle"];
}
<form asp-action="Edit" asp-controller="PrintSubtitles" asp-route-id="@Model.id">
    <div class="form-group">
        <label asp-for="subtitle" class="control-label"></label>
        <input type="text" asp-for="subtitle" class="form-control" />
        <span asp-validation-for="subtitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="text" class="control-label"></label>
        <textarea style="height:400px" asp-for="text" class="form-control"></textarea>
        <span asp-validation-for="text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="picture" class="control-label"></label>
        <input type="text" asp-for="picture" class="form-control" />
        <span asp-validation-for="picture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">@localizer["IdNews"]</label>
        <select asp-for="PieceOfNewsID" asp-items="@ViewBag.SelectItems"></select>
        <span asp-validation-for="PieceOfNewsID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@localizer["SaveSubtitle"]" class="btn btn-default" />
    </div>
</form>