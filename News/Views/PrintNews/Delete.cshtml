@using News.Data.Models
@model PieceOfNews

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewBag.Title = localizer["DeleteNews"];
}

<div>
    <dl class="dl-horizontal">
        <dt>@localizer["Title"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <div>
        <form asp-controller="PrintNews" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="@localizer["Remove"]" />
            </div>
        </form>
    </div>
</div>